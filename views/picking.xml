<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherited" model="ir.ui.view">
        <field name="name">view.picking.form.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="priority">1001</field>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[3]/field[@name='move_ids_without_package']/tree[1]/field[@name='product_id']"
                   position="after">
                <field name="pcs_per_cartoon"/>
            </xpath>
        </field>

    </record>
    <record id="view_move_form_inherited" model="ir.ui.view">
        <field name="name">view.move.form.inherited</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.stock_move_form"/>
        <field name="priority">1001</field>
        <field name="arch" type="xml">
            <field name="product_tmpl_id" position="after">
                     <field name="pcs_per_cartoon"/>
            </field>
        </field>

    </record>
</odoo>